<div class="container">
  <div class="row" style="margin-bottom: 20px">
    <%= render partial: "/layouts/navigation" %>
    
    <h1 style="font-family: Georgia; font-size: 50px; margin-top: 5%; text-align: center">자유게시판</h1>
<form action="/action_write" method="POST">
    
  <div class="form-group">
    <label for="writer">작성자</label>
    <input name="writer" type="text" class="form-control" id="name" placeholder="이름을 작성하시오">
  </div>
  <div class="form-group">
    <label for="subject">제목</label>
    <input name="subject" type="text" class="form-control" id="sub" placeholder="제목을 입력하세요">
  </div>
  <div class="form-group">
    <label for="content">내용</label>
    <textarea name="content" class="form-control" rows="5" id="comment" placeholder="내용을 작성하세요"></textarea>
  </div>
  
  <button type="submit" class="btn btn-default">글쓰기</button>
</form>
</div>
</div>
<%= render partial: "/layouts/fooster" %>