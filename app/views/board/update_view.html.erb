<div class="container">
  <div class="row" style="margin-bottom: 20px">
    <%= render partial: "/layouts/navigation" %>
    
    <h1 style="font-family: Georgia; font-size: 50px; margin-top: 5%; text-align: center">수정</h1>
<form action="/real_update/<%= @one_post.id %>" method="POST">
    
  <div class="form-group">
    <label for="writer">작성자</label>
    <input name="writer" type="text" class="form-control" value="<%= @one_post.writer %>" id="name" placeholder="이름을 작성하시오">
  </div>
  <div class="form-group">
    <label for="subject">제목</label>
    <input name="subject" type="text" class="form-control" value="<%= @one_post.subject %>" id="sub" placeholder="제목을 입력하세요">
  </div>
  <div class="form-group">
    <label for="content">내용</label>
    <textarea name="content" class="form-control" rows="5" id="comment" placeholder="내용을 작성하세요"> <%= @one_post.content %> </textarea>
  </div>
  
  <button type="submit" class="btn btn-default">완료</button>
</form>
</div>
</div>

<%= render partial: "/layouts/fooster" %>
