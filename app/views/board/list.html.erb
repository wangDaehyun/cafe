<div class="container">
<%= render partial: "/layouts/navigation" %>
<h1 style="margin-top:10%; text-align: center; font-size: 50px">자유게시판</h1>
<table class="table table-condensed" style="margin-top: 4%">
    <thead>
        <tr>
            <th>작성자</th>
            <th>제목</th>
            <th>보낸 시간</th>
            <th> </th>
        </tr>
        <% @every_post.each do |p| %>
        <tbody>
            <tr>
                <td><%= p.writer %></td>
                <td><a href="/view_content/<%= p.id %>"><%= p.subject %></a></td>
                <td><%= p.created_at.in_time_zone("Asia/Seoul").strftime("%Y년%m월%d일 %H시%M분%S초") %></td>
                <td>
                    <a href="/update_view/<%= p.id %>"><button type="submit" class="btn btn-default">수정</button></a>
                    <a href="/destroy/<%= p.id %>"><button type="submit" class="btn btn-default">삭제</button></a>
                </td>
            </tr>
        </tbody>
        <% end %>
        
    </thead>
  
</table>
<h1 style=" margin-top: 10%; text-align: center"><a href="/board/write"><button type="submit" class="btn btn-default">글쓰기</button></a></h1>
</div>
<%= render partial: "/layouts/fooster" %>